<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#500001"
                android:centerColor="#b290c3"
                android:centerY="1.0"
                android:endColor="#891522"
                android:angle="270"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#337A00"
                    android:centerColor="#000A00"
                    android:centerY="1.0"
                    android:endColor="#2F9ccf"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>